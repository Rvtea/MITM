{
	"name": "MITM",
	"version": "0.0.1",
	"description": "MITM replace your js/css file",
  	"manifest_version": 2,
	"permissions": [
		"activeTab",
    	"tabs",
        "webRequest",
        "background",
        "debugger",
        "notifications",
        "storage"
	],
	"background":{
		"persistent": true,
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
